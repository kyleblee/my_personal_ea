<% if flash.has?(:message)%>
  <p id="main-view-message"><%=flash[:message]%></p>
<% end %>

<section class="info-sections">

  <div class="main-wrappers interaction-wrapper">
    <h3><%=@plan.name%></h3>

    <div class="user-show-div list-divs">
      <%if @plan.date%><p class="list-info">Date: <%=@plan.date%></p><%end%>
      <%if @plan.time%><p class="list-info">Time: <%=@plan.time%></p><%end%>
      <%if @plan.location%><p class="list-info">Location: <%=@plan.location%></p><%end%>
      <%if @plan.context%><p class="list-info">Context: <%=@plan.context%></p><%end%>
      <%if @plan.pre_notes%><p class="list-info">Notes to prepare: <%=@plan.pre_notes%></p><%end%>
      <%if @plan.post_notes%><p class="list-info">Post-plan notes: <%=@plan.post_notes%></p><%end%>
      <%if !@plan.contacts.empty?%>
        <p>Contacts invited:</p>
        <div class="contacts-list">
          <ul>
            <%@plan.contacts.each do |contact|%>
              <li><%=contact.name%></li>
            <% end %>
          </ul>
        </div>
        <%end%>

      <%if plan_with_no_info?(@plan)%><p class="list-info">There isn't any information to display about this plan.</p><%end%>
      <a href="/plans/<%=@plan.id%>/edit"><button class="users-show-buttons buttons">Edit</button></a>
      <a href="/plans/<%=@plan.id%>/delete"><button id="delete-account-button" class="users-show-buttons buttons">Delete</button></a>
    </div>

  </div>
</section>
